= form_for [@company,@template] do |f|
  - if @template.errors.any?
    #error_explanation
      %h2= "#{pluralize(@template.errors.count, "error")} prohibited this template from being saved:"
      %ul
        - @template.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :lenguaje
    = f.select :lenguaje, options_for_select([["EN"],["ES"]]),{},{class: "form-control max-trescientos"}
  .field
    = f.label :tipo, "Type"
    = f.select :tipo, options_for_select(["Proposal","Contract" ,"Legal one" ,"Legal two","Payments", "Cancellation"]), {}, {class: "form-control max-trescientos"}
  .field
    = f.label :papermate
    = f.file_field :papermate
  .actions
    = f.submit 'Save', class: "btn btn-primary"
