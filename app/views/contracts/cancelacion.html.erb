<%- @template = @contract.contact.campaign.company.templates.where("lenguaje = ? and tipo = 'Cancellation' ",@contract.lenguaje).last%>
<%if @template%>
	<div style="background: url('<%=Rails.root%>/public<%=@template.papermate.url(:original, timestamp: false)%>');background-size: 1000px 1095px;background-repeat: repeat;padding: 30px;">
	  <%-@template.datatemplates.each do |x|%>
		<div style="margin-left:<%=x.left_width%>px;">
		    <%-x.content = Contract.reemplace_text(x.content, @contract)%>
		    <%=x.content.html_safe%>
		</div>
	  <%end%>
	</div>
<%end%>