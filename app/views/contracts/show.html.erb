<%- @template = @contract.contact.campaign.company.templates.where("lenguaje = ? ant tipo = 'contrato' ",@contract.lenguaje).last%>
<div style="background: url('<%=Rails.root%>/public<%=@template.papermate.url(:original, timestamp: false)%>');background-size: contain;background-repeat: no-repeat;">
  <%-@template.datatemplates.each do |x|%>
    <%-x.content = Contract.reemplace_text(x.content, @contract)%>
    <%=x.content.html_safe%>
  <%end%>
</div>