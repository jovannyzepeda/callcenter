%h2.alert.alert-danger.center.text-center
  %strong User Administration
  %i.fa.fa-user-o{"aria-hidden" => "true"}
- if @user.present?
  = @user
= link_to new_admin_path, "class" => "btn btn-default" do
  %i.fa.fa-user-plus{"aria-hidden" => "true"} Create user
= link_to root_path, "class" => "btn btn-default" do
  %i.fa.fa-reply{"aria-hidden" => "true"} Go back
%hr.dispnone/
.table-responsive
  %table.table.table-striped
    %thead
      %tr
        %th E-mail
        %th Privilege
    %tbody
      - @users.each do |user|
        %tr
          %td= user.email
          %td
            Liner
          %td
            = link_to admin_destroy_path(user), method: :delete, data: { confirm: "Are you sure?" } do
              %i.fa.fa-user-times{"aria-hidden" => "true"} Delete user
          %td
            = link_to  admin_edit_path(user), method: :edit do
              %i.fa.fa-pencil-square-o{"aria-hidden" => "true"} Edit user
